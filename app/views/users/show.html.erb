<% provide(:title, @user.name) %>
<body>
  <div >
    <header class="center jumbotron">
      <h1>Your Moods</h1>
      <h2>This is how you have been feeling lately. </h2>
    </header>
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user.messages.any? %>
        <h3>Microposts (<%= @user.messages.count %>)</h3>
        <ol class="microposts">
          <%= render @messages %>
        </ol>
      <% end %>
    </div>
  </div>
</body>